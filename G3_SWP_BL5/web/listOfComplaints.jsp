  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Complaint List</h6>
              </div>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Complaint Title</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Created Date</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                      <th class="text-secondary opacity-7"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <c:forEach items="${requestScope.complaintList}" var="t">
                    <tr>
                      <td class="w-3">
                        <div class="d-flex px-3 py-1">
                            <p class="text-secondary mb-0">${t.complaintID}</p>
                        </div>
                      </td>
                      <td class="w-70"> 
                        <div class="d-flex px-3 py-1">
                          <h6 class="mb-0 text-sm">${t.complaintTitle}</h6>
                        </div>
                      </td>
                      <td class="align-middle text-center w-3">
                        <span class="text-secondary text-xs font-weight-bold">${t.createdDate}</span>
                      </td>
                      <td class="align-middle text-center text-sm">
                        <c:if test="${t.status.equals('approved')}">
                          <span class="badge badge-sm bg-gradient-success w-40">${t.status}</span>
                        </c:if>
                        <c:if test="${t.status.equals('rejected')}">
                          <span class="badge badge-sm bg-gradient-danger w-40">${t.status}</span>
                        </c:if>
                        <c:if test="${t.status.equals('pending')}">
                          <span class="badge badge-sm bg-gradient-info w-40">${t.status}</span>
                        </c:if>
                      </td>
                      <td class="align-middle">
                        <a href="" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                          View
                        </a>
                      </td>
                    </tr>
                    </c:forEach>
                  </tbody>
                </table>
                <div aria-label="Page navigation ">
                  <ul class="pagination justify-content-center">
                    <c:if test="${requestScope.index>1}">      <!--previous button-->
                      <li class="page-item"><a class="page-link" href="ListOfComplaintsController?index=${requestScope.index-1}">&laquo;</a></li>
                    </c:if>
                    <c:forEach begin="1" end="${requestScope.page}" var="i">
                      <li class="page-item <c:if test="${i.equals(requestScope.index)}">active</c:if>">
                        <a class="page-link" href="ListOfComplaintsController?index=${i}">${i}</a>
                      </li>
                    </c:forEach>
                    <c:if test="${requestScope.index<requestScope.page}">
                      <li class="page-item"><a class="page-link" href="ListOfComplaintsController?index=${requestScope.index+1}">&raquo;</a></li>
                    </c:if>
                  </ul>
                </div>
